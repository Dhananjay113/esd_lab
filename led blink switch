voidmain(void)
{
WDT_A->CTL = WDT_A_CTL_PW | WDT_A_CTL_HOLD; // stop watchdog timer
P2->DIR |=BIT0;
P2->DIR |=BIT1;
P2->DIR |=BIT2;

P1->DIR&= ~BIT1;
P1->REN |= BIT1;
P1->OUT |= BIT1;

int count = 0;

while(1)

{
if(!(P1->IN& BIT1))
{

EE3016 â€“ Embedded Systems Lab 6

count = count+1;
if (count>3)count=0;
delay(10000);
}
if (count == 1) {P2->OUT&= ~BIT1;P2->OUT&= ~BIT0;P2->OUT^=
BIT2;delay(100000);}
if (count == 2) {P2->OUT&= ~BIT2;P2->OUT&= ~BIT0;P2->OUT^=
BIT1;delay(100000);}
if (count == 3) {P2->OUT&= ~BIT2;P2->OUT&= ~BIT1;P2->OUT^=
BIT0;delay(100000);}
}
}
